{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "school-roster",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**",
          "$APPCACHE/**",
          "$RESOURCE/**",
          "$APPDATA/**",
          "$APPDATA/school_logos/**"
        ]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true,
        "confirm": true,
        "message": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**",
          "**/*",
          "/**/*",
          "$APPDIR/models",
          "$RESOURCE/models",
          "$APPDATA",
          "$APPDATA/**",
          "$APPDATA/models",
          "$APPDATA/models/**",
          "$APPDATA/school_logos",
          "$APPDATA/school_logos/**"
        ],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "requestUserAttention": true,
        "setResizable": true,
        "setMaximizable": true,
        "setMinimizable": true,
        "setClosable": true,
        "setTitle": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setDecorations": true,
        "setAlwaysOnTop": true,
        "setContentProtected": true,
        "setSize": true,
        "setMinSize": true,
        "setMaxSize": true,
        "setPosition": true,
        "setFullscreen": true,
        "setFocus": true,
        "setIcon": true,
        "setSkipTaskbar": true,
        "setCursorGrab": true,
        "setCursorVisible": true,
        "setCursorIcon": true,
        "setCursorPosition": true,
        "setIgnoreCursorEvents": true,
        "startDragging": true,
        "print": true
      }
    },
    "windows": [
      {
        "title": "school-roster",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: file: data:;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "resources": ["models/*"],
      "identifier": "com.schoolroster.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [],
      "copyright": "Copyright Â© 2025 School Roster",
      "category": "Education",
      "shortDescription": "Aplicacion de horarios escolares",
      "longDescription": "Aplicacion representa una solucion para automatizar y facilitar la creacion de horarios, reduciendo el esfuerzo, otpimizando el uso de recursos y mejorando la precision en la planificacion.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    }
  }
}
